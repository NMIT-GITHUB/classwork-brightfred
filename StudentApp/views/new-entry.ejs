<%- include('header') %>

<h2>Write a New Entry</h2>

<form method="post" action="/new-entry" class="form-horizontal">
    <div class="form-group">
        <label for="title" class="col-sm-2 control-label">Title</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="title" name="title" placeholder="Entry title" required>
        </div>
    </div>
    
    <div class="form-group">
        <label for="body" class="col-sm-2 control-label">Entry text</label>
        <div class="col-sm-10">
            <textarea class="form-control" id="body" name="body" rows="3" placeholder="Your entry text" required></textarea>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary">Save Entry</button>
            <a href="/" class="btn btn-default">Cancel</a>
        </div>
    </div>
</form>

<%- include('footer') %>